<div class="wrapper">
  <div class="container">
    <h2 class="title-lg ">Новый вопрос</h2>

    <% @question.errors.full_messages.each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
    <% end %>
    <p class="mb">для <%= link_to @user[:nickname], user_path(@question.user) %></p>
    <%= render 'form', question: @question %>
  </div>
</div>
